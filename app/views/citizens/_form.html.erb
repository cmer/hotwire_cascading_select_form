<%= form_with id: "citizen_form", model: citizen, class: "card flex flex-col gap", data: { controller: "form" } do |form| %>
  <div class="flex flex-col gap mb-2">
    <div class="flex flex-col gap-half">
      <%= form.label :name, "Name", class: "text-sm font-medium leading-none" %>
      <%= form.text_field :name, class: "input" %>
    </div>

    <div class="flex flex-col gap-half">
      <%= label_tag :country_id, "Country", class: "text-sm font-medium leading-none" %>
      <%= render "select_countries", form: form, countries: @countries %>
    </div>

    <div class="flex flex-col gap-half">
      <%= label_tag :state_id, "State", class: "text-sm font-medium leading-none" %>
      <%= render "select_states", form: form, states: @states %>
    </div>

    <div class="flex flex-col gap-half">
      <%= form.label :city_id, "City", class: "text-sm font-medium leading-none" %>
      <%= render "select_cities", form: form, cities: @cities %>
    </div>
  </div>

  <div class="flex items-center">
    <%= form.submit "Save changes" %>
  </div>
<% end %>
